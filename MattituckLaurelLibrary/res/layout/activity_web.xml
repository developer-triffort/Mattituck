<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".WebActivity" >
    <RelativeLayout
        android:id="@+id/web_rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp" 
        android:background="@drawable/black_bg"
        >
		<Button
      	    android:visibility="invisible"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:background="@drawable/back_btn"
      	    android:layout_marginLeft="15dp" 
      	    />
    	<Button
    	    android:id="@+id/web_close"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="Close" 
    	    android:textStyle="bold"
    	    android:textColor="@android:color/white"
    	    android:paddingLeft="10dp"
    	    android:paddingRight="10dp"
    	    android:paddingTop="5dp"
    	    android:paddingBottom="5dp"
    	    android:textSize="@dimen/menu"
    	    android:background="@drawable/close_bg"
    	    android:onClick="onBack"
    	    android:layout_centerVertical="true"
    	    />
    	<TextView
    	    android:id="@+id/web_title" 
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:textColor="@android:color/white"
    	    android:text="Loading Content..."
    	    android:textStyle="bold"
    	    android:gravity="center"
    	    android:layout_toRightOf="@+id/web_close"
    	    android:layout_marginLeft="10dp"
    	    android:maxLines="1"
    	    android:layout_centerVertical="true"
    	    />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/web_rel2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" 
        android:background="@drawable/black_bg"
        >
      	<Button
      	    android:id="@+id/back_btn"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:background="@drawable/back_btn"
      	    android:layout_marginLeft="15dp" 
      	    android:onClick="onBackPage"
      	    />
      	<Button
      	    android:id="@+id/forward_btn"
      	    android:layout_toRightOf="@+id/back_btn"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:background="@drawable/forward_btn"
      	    android:layout_marginLeft="20dp"
      	    android:onClick="onForwardPage" 
      	    />
      	<Button
      	    android:id="@+id/web_open"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content" 
      	    android:background="@drawable/open_web"
      	    android:layout_alignParentRight="true"
      	    android:layout_marginRight="15dp"
      	    android:onClick="onOpen"
      	    />
      	<Button
      	    android:id="@+id/web_refresh"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:background="@drawable/refresh"
      	    android:layout_toLeftOf="@+id/web_open"
      	    android:layout_marginRight="20dp"
      	    android:onClick="onRefresh"
      	    />
      	<ProgressBar
      	    android:id="@+id/web_progress"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:layout_toLeftOf="@+id/web_refresh" 
      	    android:layout_marginRight="20dp"
      	    android:layout_alignTop="@+id/web_refresh"
      	    android:layout_alignBottom="@+id/web_refresh"
      	    />
    </RelativeLayout>
    <WebView
        android:id="@+id/web"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/web_rel2"
        android:layout_below="@+id/web_rel1" 
        
        />
</RelativeLayout>