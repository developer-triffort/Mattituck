<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green" >

    <RelativeLayout
        android:id="@+id/ld_rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_bg"
        android:padding="2dp" >
        <Button
            android:id="@+id/ld_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/close_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/close"
            android:textColor="@android:color/white"
            android:textSize="@dimen/menu"
            android:tag="0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ld_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:text="@string/event_details"
            android:textColor="@android:color/white"
            android:textSize="@dimen/menu"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ld_rel1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/white_bg"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ld_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="title"
            android:textColor="@color/list_title"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ld_decp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Decription"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="@dimen/menu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" 
            >
            <Button
            android:id="@+id/ld_Demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_button"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="Regist"
            android:textColor="@android:color/white"
            android:textSize="@dimen/menu" 
            android:visibility="invisible"/>
            <TextView
                android:id="@+id/ld_whenv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/when"
                android:textSize="@dimen/menu" 
                android:textColor="@color/lt_green"
                android:layout_alignRight="@+id/ld_Demo"
                />
            <TextView
                android:id="@+id/ld_when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="when"
                android:layout_toRightOf="@+id/ld_whenv"
                android:textColor="@android:color/black"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/menu" 
                />
            <TextView
                android:id="@+id/ld_timev"
                android:layout_below="@+id/ld_when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textSize="@dimen/menu" 
                android:textColor="@color/lt_green"
                android:layout_alignRight="@+id/ld_Demo"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/ld_time"
                android:layout_below="@+id/ld_when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_toRightOf="@+id/ld_timev"
                android:textColor="@android:color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/menu" 
                />
            <TextView
                android:id="@+id/ld_locv"
                android:layout_below="@+id/ld_timev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textSize="@dimen/menu" 
                android:textColor="@color/lt_green"
                android:layout_alignRight="@+id/ld_Demo"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/ld_loc"
                android:layout_below="@+id/ld_timev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:layout_toRightOf="@+id/ld_locv"
                android:textColor="@android:color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/menu" 
                />
        </RelativeLayout>

        <Button
            android:id="@+id/ld_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_button"
            android:layout_marginTop="15dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="Register"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textSize="@dimen/menu" />
    </LinearLayout>

</RelativeLayout>