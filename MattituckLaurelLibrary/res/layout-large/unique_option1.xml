            android:onClick="onLocalHistory" />
			<TextView
			    android:id="@+id/u_hi_a"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/uni_local"
			    android:textColor="@android:color/black"
