			    android:layout_height="wrap_content"
			    android:text="@string/uni_local_below"
			    android:textColor="@android:color/black"
                android:textSize="@dimen/menu"  
                android:layout_toRightOf="@+id/u_hi"
                android:layout_below="@+id/u_hi_a"
                android:layout_marginLeft="10dp"
                android:onClick="onLocalHistory"
			    />
    </RelativeLayout>
