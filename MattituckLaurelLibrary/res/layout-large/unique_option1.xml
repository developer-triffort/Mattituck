<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingRight="10dp" 
    android:paddingBottom="20dp"
    >       
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:onClick="onAtlantis"
        >

        <ImageButton
            android:id="@+id/u_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/atlantis_1"
            android:contentDescription="@string/main_search_catalog"
            android:onClick="onAtlantis" />
			<TextView
			    android:id="@+id/u_at_a"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/uni_atlantis"
			    android:textColor="@android:color/black"
                android:textSize="@dimen/title"  
                android:textStyle="bold"
                android:layout_toRightOf="@+id/u_at"
                android:layout_marginLeft="10dp"
                android:onClick="onAtlantis"
			    />
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/uni_atlantis_below"
			    android:textColor="@android:color/black"
                android:textSize="@dimen/menu"  
                android:layout_toRightOf="@+id/u_at"
                android:layout_below="@+id/u_at_a"
                android:layout_marginLeft="10dp"
                android:onClick="onAtlantis"
			    />
    </RelativeLayout>
    <RelativeLayout
