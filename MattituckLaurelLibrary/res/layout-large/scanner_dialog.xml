<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green"
  	>
    <RelativeLayout
        android:id="@+id/scan_rel1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_back"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" 
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true" 
            android:textSize="@dimen/title"
            />
        <ImageButton
            android:id="@+id/scan_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_cancel" 
            />
    </RelativeLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/scan_rel1" 
	    android:orientation="vertical"
	    android:background="@drawable/white_bg"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    android:gravity="center_horizontal"
	    android:padding="10dp"
	    >
	    <TextView
            android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
            android:text="@string/uni_ps"
            android:textColor="@color/blue"
            android:textStyle="bold"
             android:textSize="@dimen/sub_title"
            />
	    <TextView
			android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ps_txt"
            android:textColor="@android:color/black"    
            android:textSize="@dimen/menu"
            android:layout_margin="5dp"  
            />
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/scannx"
	        />
	</LinearLayout>
</RelativeLayout>