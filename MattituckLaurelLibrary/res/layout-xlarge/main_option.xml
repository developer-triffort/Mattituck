<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/white"
    android:gravity="center">
    <RelativeLayout
            android:id="@+id/main_option1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/main_option1_mid"
            	android:layout_width="10dp"
            	android:layout_height="wrap_content"
            	android:layout_centerHorizontal="true"
            	android:background="@color/green"
                >
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/main_option1_mid"
                android:orientation="vertical" 
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_search_catalog"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_catalog" 
                    android:onClick="onSearchCatalog"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_search_below"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu_below"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main_option1_mid"
                android:orientation="vertical" 
                android:gravity="center"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_news_letter"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/newsletter" 
                    android:onClick="onNews"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_news_below"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu_below"/>
            </LinearLayout>
        </RelativeLayout>
        
        
        <RelativeLayout
            android:id="@+id/main_option2"
            android:layout_below="@+id/main_option1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <RelativeLayout
                android:id="@+id/main_option2_mid"
            	android:layout_width="10dp"
            	android:layout_height="wrap_content"
            	android:layout_centerHorizontal="true"
            	android:background="@color/green"
                >
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/main_option2_mid"
                android:orientation="vertical" 
                android:gravity="center"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_library_info"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/library_information" 
                    android:onClick="onLibrary"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_library_below"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu_below"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main_option2_mid"
                android:orientation="vertical" 
                android:gravity="center"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_my_account"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/account" 
                    android:onClick="onAcount"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_my_below"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu_below"/>
            </LinearLayout>
        </RelativeLayout>
        
        
        <RelativeLayout
            android:id="@+id/main_option3"
            android:layout_below="@+id/main_option2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <RelativeLayout
                android:id="@+id/main_option3_mid"
            	android:layout_width="10dp"
            	android:layout_height="wrap_content"
            	android:layout_centerHorizontal="true"
            	android:background="@color/green"
                >
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/main_option3_mid"
                android:orientation="vertical" 
                android:gravity="center"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_event_calender"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/event_calendar" 
                    android:onClick="onCalender"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_event_below"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu_below"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main_option3_mid"
                android:orientation="vertical" 
                android:gravity="center"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_research_data"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/databases" 
                    android:onClick="onDatabase"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_research_below"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu_below"/>
            </LinearLayout>
        </RelativeLayout>
        
        
        <RelativeLayout
            android:id="@+id/main_option4"
            android:layout_below="@+id/main_option3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <RelativeLayout
                android:id="@+id/main_option4_mid"
            	android:layout_width="10dp"
            	android:layout_height="wrap_content"
            	android:layout_centerHorizontal="true"
            	android:background="@color/green"
                >
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/main_option4_mid"
                android:orientation="vertical" 
                android:gravity="center"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_online_services"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/online_services" 
                    android:onClick="onService"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_online_below"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu_below"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main_option4_mid"
                android:orientation="vertical" 
                android:gravity="center"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_unique_services"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unique_services" 
                    android:onClick="onUnique"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_unique_below"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/menu_below"/>
            </LinearLayout>
        </RelativeLayout>
        
</RelativeLayout>