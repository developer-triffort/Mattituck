            android:name="com.triffortali.mattiluck.SetupNotificationActivity"
            android:label="@string/title_activity_setup_notification"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.triffortali.mattiluck.BCActivity"
            android:label="@string/title_activity_bc"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.triffortali.mattiluck.DigitalLibraryActivity"
            android:label="@string/title_activity_digital_library" 
            android:screenOrientation="portrait">
        </activity>
    </application>

